<h3>设置</h3>
<div class='alert alert-info'>
  此页面记录了所有的设置，非常重要，用于:切换主题颜色等
</div>

<p>设置总数： <%= @total_count %></p>
<%= paginate @settings %>
<%= link_to "新建", new_setting_path %>

<%= link_to raw("<i class='fa fa-download'></i>下载csv"), download_csv_settings_path, class: "btn btn-primary btn-sm"%>

<table class='table table-striped table-hover table-bordered'>
  <tr>
    <th>ID</th>
    <th>名称</th>
    <th>值</th>
    <th>默认值</th>
    <th>说明</th>
    <th style="width: 180px;">创建时间</th>
    <th style="width: 130px;">操作</th>
  </tr>

  <% @settings.each do |setting| %>
    <tr>
      <td><%= setting.id %></td>
      <td><%= setting.name %></td>
      <td><%= setting.value %></td>
      <td><%= setting.default %></td>
      <td><%= setting.comment %></td>
      <td><%= setting.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td>
        <%= link_to '编辑', edit_setting_path(setting) %>
        <%= link_to '删除', setting, method: :delete, data: { confirm: '确定删除?' } , class: 'btn btn-danger btn-sm'%>
      </td>
    </tr>
  <% end %>
</table>
<%= paginate @settings %>

<%= link_to '返回', settings_path %>
